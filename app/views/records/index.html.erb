<h1>Listing records</h1>

<table>
  <tr>
    <th>User name</th>
    <th>Project name</th>
    <th>Time activity</th>
    <th>Date activity</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.user_name %></td>
    <td><%= record.project_name %></td>
    <td><%= record.time_activity %></td>
    <td><%= record.date_activity %></td>
    <td><%= record.status %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

